  "description": "Automatically change Firefox's theme based on the time",

  "icons": {
    "48": "icons/dark-48.png"
  },

  "permissions": [
    "alarms",
    "management",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/dark-32.png",
    "default_popup": "popup/index.html"
  },

  "background": {
